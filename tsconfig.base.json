{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@rocketship/core": [
        "packages/core/src/index.ts",
        "packages/core/dist/index.d.ts",
        "packages/core/dist/index.js"
      ],
      "@rocketship/core/*": [
        "packages/core/src/*",
        "packages/core/dist/*"
      ],
      "@rocketship/shared": [
        "shared/src/index.ts",
        "shared/dist/index.d.ts",
        "shared/dist/index.js"
      ],
      "@rocketship/shared/*": [
        "shared/src/*",
        "shared/dist/*"
      ],
      "rocketship-extension": [
        "extension/dist/index.d.ts",
        "extension/dist/index.js",
        "extension/src/index.ts"
      ],
      "rocketship-extension/*": [
        "extension/src/*",
        "extension/dist/*"
      ]
    }
  }
}
