{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@rocketship/shared": ["shared/src/index.ts", "shared/dist/index.js"],
      "@rocketship/core": ["packages/core/src/index.ts", "packages/core/dist/index.js"],
      "rocketship-extension": ["extension/src/index.ts", "extension/dist/index.js"],
      "@rocketship/shared/*": ["shared/src/*", "shared/dist/*"],
      "@rocketship/core/*": ["packages/core/src/*", "packages/core/dist/*"],
      "rocketship-extension/*": ["extension/src/*", "extension/dist/*"]
    }
  }
}